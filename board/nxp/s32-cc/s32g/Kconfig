config NXP_S32GRDB_BOARD
	bool
	default n
	imply CMD_E1000
	imply CMD_PMIC
	imply DM_PMIC
	imply DM_PMIC_FS5600
	imply DM_PMIC_PF5020
	imply DM_PMIC_VR5510
	imply E1000
	imply NVME
	imply NXP_S32CC_BOARD_COMMON
	imply PHY_ATHEROS
	imply PHY_MICREL
	imply PHY_MICREL_KSZ90X1
	imply RGMII
	select ADC
	select BOARD_LATE_INIT
	select SARADC_S32CC
	select SPI_FLASH_MACRONIX

config NXP_S32GEVB_BOARD
	bool
	default n
	imply ADC
	imply CMD_E1000
	imply CMD_EEPROM
	imply CMD_PMIC
	imply DM_PMIC
	imply DM_PMIC_VR5510
	imply E1000
	imply I2C_EEPROM
	imply NXP_S32CC_BOARD_COMMON
	imply PHY
	imply PHY_AQUANTIA
	imply PHY_MICREL
	imply PHY_MICREL_KSZ90X1
	imply RGMII
	imply SARADC_S32CC
	imply SJA1105
	select MISC_INIT_R if SJA1105
	select SPI_FLASH_MACRONIX

config S32GEN1_HWCONFIG
	default "pcie0:mode=rc,clock=ext;pcie1:mode=sgmii,clock=ext,fmhz=125,xpcs_mode=2G5" if (PCIE_S32GEN1 && FSL_PFENG) && (NXP_S32GRDB_BOARD || TARGET_S32G3XXAEVB || TARGET_S32G3XXAEVB3)
	default "pcie0:mode=rc,clock=ext;pcie1:mode=sgmii,clock=ext,fmhz=125,xpcs_mode=0" if (PCIE_S32GEN1 && FSL_PFENG) && TARGET_S32G2XXAEVB
